<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="password">
        <item name="android:maxLength">12</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/ic_lock_black</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">password</item>
    </style>

    <style name="email">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/ic_email_black</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">email</item>
    </style>

    <style name="username">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/ic_person_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">username</item>
    </style>

    <style name="Heading">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="menu_fab_size">normal</item>
        <item name="menu_colorNormal">@color/colorPrimary</item>
        <item name="menu_colorPressed">@color/colorPrimary</item>
        <item name="menu_colorRipple">@color/white</item>
        <item name="menu_icon">@drawable/fab_add</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">#F2AB00</item>
        <item name="fab_colorRipple">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="ChipTheme" parent="Widget.MaterialComponents.Chip.Entry">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/CreamBrulee</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/CeriseRed</item>
        <item name="android:textColor">@color/CeriseRed</item>
        <item name="chipBackgroundColor">@color/CreamBrulee</item>
    </style>

    <!-- Theme.AppCompat.Light.Dialog -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--custom text navigation design-->
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">@dimen/navigationFontSize</item>
    </style>


</resources>
